datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model users {
  id            String   @id @default(uuid())
  name          String?
  email         String   @unique
  phone_number  String?
  events        user_events[]        
  token_version Int      @default(0)
  created_at    DateTime @default(now()) 
  updated_at    DateTime @updatedAt
}

model user_events {
  id            String   @id @default(uuid())
  date_of_event String
  user          users @relation(fields: [userId], references: [id])
  userId        String
  event         events   @relation(fields: [eventId], references: [id])
  eventId       String
  created_at    DateTime @default(now()) 
  updated_at    DateTime @updatedAt
}

model events {
  id                String   @id @default(uuid())
  type              String   @unique
  users             user_events[]  
  event_histories   event_histories[]
  created_at        DateTime @default(now()) 
  updated_at        DateTime @updatedAt
}

model event_histories {
  id          Int   @id @default(autoincrement())
  event       events
  title       String
  description String
  photos      events_photos[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model events_photos {
  id                  Int   @id @default(autoincrement())
  path                String
  event_histories     event_histories @relation(fields: [event_history_id], references: [id])
  event_history_id    Int
}

model accessories {
  id          String   @id @default(uuid())
  type        String   @unique
  description String
  photos      accessories_photos[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt  
}

model accessories_photos {
  id           Int         @id @default(autoincrement())
  path         String
  accssories   accessories @relation(fields: [accessory_id], references: [id])
  accessory_id String
}